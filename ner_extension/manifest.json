{
    "manifest_version": 2,
    "name": "NER Demo Extension",
    "description": "none yet",
    "version": "1.0",
    
    "browser_action": {
        "default_popup": "popup.html"
      },

    "content_security_policy": "script-src 'self' https://*.google.com 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "permissions": [
        "tabs",
        "http://127.0.0.1:8000/",
        "background",
        "identity",
        "notifications"
    ]
}